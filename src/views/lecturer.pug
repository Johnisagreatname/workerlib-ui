.body
    div
        p(:style="{fontSize: '16px',fontWeight: 'bold'}") 讲师档案

        div(class="selectedList")
            div(class="condition")
                span(:style="{fontSize: '16px',float: 'left',marginRight: '10px',paddingTop: '14px',color: '#789fef'}") 已选条件
                div(class="selected",v-if="courseTitle") {{courseTitle}}
                    Icon(type="ios-backspace-outline",@click="clearCourseTitle()")

            div(class="selectButton")
                div(class="reset",@click="reset()") 重置
                div(class="inquire",@click="searchUserList()") 查询
        div(class="select")
            div(class="divSelect")
                div(class="selectTitle") 课程名称
                div(class="selectValue")
                    Input(v-model="selectUserName",clearable,placeholder="请输入课程名称")
        div(class="pullDown",v-if="pullDown == false")
            img(src="~@/assets/css/images/下拉.png",@click="switchTo()")
        div(class="pullDown",v-else)
            img(src="~@/assets/css/images/上拉.png",@click="switchTo()")
        div(class="button")
            Button(type="primary",ghost,icon="ios-add-circle-outline") 新增讲师
            Button(type="primary",ghost,icon="ios-create-outline") 修改讲师
            Button(type="primary",ghost,icon="ios-trash-outline") 删除讲师
            Button(type="primary",ghost,icon="ios-cloud-upload-outline") 导出
        div
            div(class="div1",v-for="item in getLectuerList()")
                div(class="div2")
                    div(class="div6")
                        Checkbox
                    div(class="div7")
                div(class="div3")
                    div(class="div4")
                    div(class="div5")
                        div(class="div8")
                        div(class="div8")
                        div(class="div8")