.body
    .topOne
        .cut
            div(@click="toggle()",:class="checked? 'cutOrange' : 'cutGray'")
                span 线上培训
            div(@click="toggle()",:class="!checked? 'cutOrange' : 'cutGray'")
                span 线下培训
    .hr
    .topOne
        .divOne
            span 课程类型：
                Input(clearable,style="width: 260px")
        .divOne
            span 课程搜索：
                Input(clearable,style="width: 260px")
        .divOne
            Button 搜索
    .hr
    .button
        Button(type="primary", ghost, icon="ios-add-circle-outline",@click="addCourseware=!addCourseware") 新建课件
        Button(type="primary", ghost, icon="ios-arrow-round-down") 下载课件
    .courseware(v-for="item in getCourseware()")
        .div1
            span(:style={'font-size': '18px','line-height':'50px','margin-left': '5%','color': '#000000'}) {{item.title}}
            template
                Dropdown(trigger="click")
                    a( href="javascript:void(0)" :style={"font-size":"30px"})
                        Icon(type="ios-more")
                    DropdownMenu(slot="list")
                        DropdownItem
                            Icon(type="ios-create-outline" )
                            span 编辑
                        DropdownItem
                            Icon(type="ios-trash-outline" )
                            span 删除
                        DropdownItem
                            Icon(type="ios-cloud-download-outline" )
                            span 下载
        .div2
            img(src="~@/assets/css/images/gj.jpeg" :style={'width':'100%','height':'100%'})
        .div3
            .left
                span(:style={'margin-left':'10%','margin-top':'5%','font-size':'18px','float':'left','color': '#000000'}) {{item.hour}}课时
                .ellipse
                    span(:style={'font-size':'12px', 'float': 'left','margin-top':'5%','margin-left': '25%','color': '#ffffff'}) 必学
            .right
                span(:style={'color':'#0090ff'}) {{item.name}}
        Button.butt 开始培训



    Modal(:value="addCourseware",title="课件上传",@on-ok="ok()",@on-cancel="cancel()",width='70%')
        template
            Menu( :theme="coursewareList" active-name="1")
                MenuItem( name="1")
                    Icon( type="md-document" )
                    span 文章管理
                MenuItem( name="2")
                    Icon( type="md-chatbubbles" )
                    span 评论管理



