.body
    .topOne
        .cut
            div(@click="toggle()",:class="checked? 'cutOrange' : 'cutGray'")
                span 线上培训
            div(@click="toggle()",:class="!checked? 'cutOrange' : 'cutGray'")
                span 线下培训
    .hr
    .topOne
        .divOne
            span 课程类型：
                Input(clearable,style="width: 260px")
        .divOne
            span 课程搜索：
                Input(clearable,style="width: 260px")
        .divOne
            Button 搜索
    .hr
    .button
        Button(type="primary", ghost, icon="ios-add-circle-outline",@click="addCourseware=!addCourseware") 新建课件
        Button(type="primary", ghost, icon="ios-arrow-round-down") 下载课件
    .courseware(v-for="item in getCourseware()")
        .div1
            span(:style={'font-size': '18px','line-height':'50px','margin-left': '5%','color': '#000000'}) {{item.title}}
            template
                Dropdown(trigger="click")
                    a( href="javascript:void(0)" :style={"font-size":"30px"})
                        Icon(type="ios-more")
                    DropdownMenu(slot="list")
                        DropdownItem
                            Icon(type="ios-create-outline" )
                            span 编辑
                        DropdownItem
                            Icon(type="ios-trash-outline" )
                            span 删除
                        DropdownItem
                            Icon(type="ios-cloud-download-outline" )
                            span 下载
        .div2
            img(src="~@/assets/css/images/gj.jpeg" :style={'width':'100%','height':'100%'})
        .div3
            .left
                span(:style={'margin-left':'10%','margin-top':'5%','font-size':'18px','float':'left','color': '#000000'}) {{item.hour}}课时
                .ellipse
                    span(:style={'font-size':'12px', 'float': 'left','margin-top':'5%','margin-left': '25%','color': '#ffffff'}) 必学
            .right
                span(:style={'color':'#0090ff'}) {{item.name}}
        Button.butt 开始培训



    Modal(:value="addCourseware",title="课件上传",@on-ok="ok()",@on-cancel="cancel()",width='70%')
        template
            Tabs
                TabPane(label="基本信息" icon="ios-paper-outline")
                    .addBody
                        .divTwo
                            .name
                                span 课件名称
                                span(:style={'color': 'red'}) *
                            .input
                                Input(clearable,style="width: 345px",size=large,v-model="userName",placeholder="请输入课件名称")
                        .divTwo
                            .name
                                span 课程
                                span(:style={'color': 'red'}) *
                            .input
                                Select(clearable,style="width:345px",v-model="type",placeholder="选择分类")
                                    Option(v-for="item in getType()", :value="item.key", :key="item.key") {{item.value}}
                        .divTwo
                            .name
                                span 总课时
                                span(:style={'color': 'red'}) *
                            .input
                                Input(clearable,style="width: 345px",size=large,v-model="userName",placeholder="请输入总课时")
                        .divTwo
                            .name
                                span 授课方式
                                span(:style={'color': 'red'}) *
                            .input
                                Button(disabled) 录播
                        .divTwo
                            .name
                                span 是否必学课程
                                span(:style={'color': 'red'}) *
                            .input
                                Radio(v-model="single") 是
                        .divTwo
                            .name
                                span 绑定课件工种分类
                                span(:style={'color': 'red'}) *
                            .input
                                Select(clearable,style="width:345px",v-model="type",placeholder="选择分类")
                                    Option(v-for="item in getType()", :value="item.key", :key="item.key") {{item.value}}
                TabPane(label="资料上传" icon="ios-cloud-upload-outline") 标签二的内容
                TabPane(label="课件详情" icon="ios-folder-outline") 标签三的内容




