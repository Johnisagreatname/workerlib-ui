#login
  width 1920px
  height 1080px
  background-image url("~@/assets/css/images/login_background.png")
  background-repeat no-repeat
  background-size 100%
  overflow auto
  position relative
  .login-box
    height 520px
    position absolute
    top 200px
    left 200px
    .name
      color #1342d3
      font-size 53px
      font-weight 600
      text-align center
    .login
      color #347cef
      font-size 53px
      font-weight 600
      text-align center
      span
        font-size 32px
        vertical-align text-bottom
        font-weight 550
    .input-box
      width 440px
      margin auto
      .input-wrap
        position relative
        input
          font-size 22px
          line-height 66px
          width 100%
          height 66px
          border-radius 33px
          border 1px solid #c9c9c9
          padding-left 70px
          margin-top 45px
          &:focus
            outline none
        i
          font-size 22px
          line-height 66px
          position absolute
          left 30px
          top 45px
          color #c9c9c9
      .button
        margin-top 50px
        font-size 22px
        text-align center
        line-height 66px
        width 100%
        height 66px
        border-radius 33px
        color #fff
        background-image linear-gradient(to right, #3f35db, #5280f9)